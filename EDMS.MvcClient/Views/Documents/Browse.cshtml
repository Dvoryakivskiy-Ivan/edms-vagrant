@model List<EDMS.MvcClient.Models.Document>
@using EDMS.MvcClient.Models

@{
    ViewData["Title"] = "Documents";

    bool isAdmin = ViewBag.IsAdmin ?? false;
    string q = ViewBag.Q as string ?? "";
    string sort = ViewBag.Sort as string ?? "date_desc";

    DocumentStatus? status = ViewBag.Status != null ? (DocumentStatus?)ViewBag.Status : null;
}

<h2>Documents</h2>

<form method="get" class="row g-2 mb-3">
    <div class="col-md-5">
        <input name="q" value="@q" class="form-control" placeholder="Search (title or content)..." />
    </div>

    <div class="col-md-3">
        <select name="sort" class="form-select">
            <option value="date_desc" selected="@(sort == "date_desc")">Date ↓</option>
            <option value="date_asc" selected="@(sort == "date_asc")">Date ↑</option>
            <option value="title_asc" selected="@(sort == "title_asc")">Title A→Z</option>
            <option value="title_desc" selected="@(sort == "title_desc")">Title Z→A</option>
        </select>
    </div>

    @if (isAdmin)
    {
        <div class="col-md-2">
            <select name="status" class="form-select">
                <option value="" selected="@(status == null)">All</option>
                <option value="Pending" selected="@(status == DocumentStatus.Pending)">Pending</option>
                <option value="Approved" selected="@(status == DocumentStatus.Approved)">Approved</option>
                <option value="Rejected" selected="@(status == DocumentStatus.Rejected)">Rejected</option>
            </select>
        </div>
    }

    <div class="col-md-2">
        <button class="btn btn-primary w-100" type="submit">Apply</button>
    </div>
</form>

@if (isAdmin)
{
    <a class="btn btn-success mb-3" asp-action="Create">+ Create document</a>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Status</th>
            <th>Created</th>
            <th>By</th>
            <th style="width: 260px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null || Model.Count == 0)
        {
            <tr>
                <td colspan="5" class="text-muted">No documents found.</td>
            </tr>
        }
        else
        {
            @foreach (var d in Model)
            {
                <tr>
                    <td>@d.Title</td>
                    <td>@d.Status</td>
                    <td>@d.CreatedAtUtc.ToLocalTime()</td>
                    <td>@d.CreatedBy</td>

                    <td>
                        <a class="btn btn-sm btn-outline-primary"
                           asp-action="Details"
                           asp-route-id="@d.Id">
                            Details
                        </a>

                        @if (isAdmin)
                        {
                            @if (d.Status == DocumentStatus.Pending)
                            {
                                <form asp-action="Approve" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@d.Id" />
                                    <button class="btn btn-sm btn-success">Approve</button>
                                </form>

                                <form asp-action="Reject" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@d.Id" />
                                    <button class="btn btn-sm btn-danger">Reject</button>
                                </form>
                            }

                            <a class="btn btn-sm btn-outline-danger ms-1"
                               asp-action="Delete"
                               asp-route-id="@d.Id">
                                Delete
                            </a>
                        }
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
