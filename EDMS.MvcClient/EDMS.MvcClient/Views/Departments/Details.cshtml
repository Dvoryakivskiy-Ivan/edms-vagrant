@using EDMS.MvcClient.Models
@model Department

@{
    ViewData["Title"] = "Department Details";
    var docs = ViewBag.Documents as List<Document> ?? new();
}

<h2>@Model.Name</h2>

<!-- TABLE 1: Department info -->
<h4 class="mt-3">Department info</h4>
<table class="table table-sm table-bordered w-auto">
    <tbody>
        <tr>
            <th>Code</th>
            <td>@Model.Code</td>
        </tr>
        <tr>
            <th>Created (UTC)</th>
            <td>@Model.CreatedAtUtc.ToString("yyyy-MM-dd HH:mm")</td>
        </tr>
        <tr>
            <th>Total documents</th>
            <td>@docs.Count</td>
        </tr>
    </tbody>
</table>

<!-- TABLE 2: Specialized documents list for this department -->
<h4 class="mt-4">Documents in this department</h4>

@if (!docs.Any())
{
    <div class="text-muted">No documents found for this department.</div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Number</th>
                <th>Title</th>
                <th>Status</th>
                <th>Priority</th>
                <th>Due (UTC)</th>
                <th>Owner</th>
                <th>Created (UTC)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var d in docs)
            {
                <tr>
                    <td>@(string.IsNullOrWhiteSpace(d.Number) ? "-" : d.Number)</td>
                    <td>
                        <a asp-controller="Documents" asp-action="Details" asp-route-id="@d.Id">@d.Title</a>
                        <div class="text-muted small">
                            Type: @d.DocumentType?.Name
                        </div>
                    </td>
                    <td>@d.Status</td>
                    <td>@d.Priority</td>
                    <td>@(d.DueAtUtc?.ToString("yyyy-MM-dd HH:mm") ?? "-")</td>
                    <td>@(string.IsNullOrWhiteSpace(d.Owner) ? "-" : d.Owner)</td>
                    <td>@d.CreatedAtUtc.ToString("yyyy-MM-dd HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>
}

<div class="mt-3">
    <a class="btn btn-secondary" asp-action="Index">Back</a>
</div>
