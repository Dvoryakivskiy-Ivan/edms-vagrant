@using EDMS.MvcClient.Models
@model DocumentType

@{
    ViewData["Title"] = "Document Type Details";
    var docs = ViewBag.Documents as List<Document> ?? new();
}

<h2>@Model.Name</h2>

<!-- TABLE 1: Type info -->
<h4 class="mt-3">Type info</h4>
<table class="table table-sm table-bordered w-auto">
    <tbody>
        <tr>
            <th>Prefix</th>
            <td>@(Model.Prefix ?? "-")</td>
        </tr>
        <tr>
            <th>Created (UTC)</th>
            <td>@Model.CreatedAtUtc.ToString("yyyy-MM-dd HH:mm")</td>
        </tr>
        <tr>
            <th>Total documents</th>
            <td>@docs.Count</td>
        </tr>
    </tbody>
</table>

<!-- TABLE 2: Specialized documents list for this type -->
<h4 class="mt-4">Documents of this type</h4>

@if (!docs.Any())
{
    <div class="text-muted">No documents found for this document type.</div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Number</th>
                <th>Title</th>
                <th>Amount</th>
                <th>Confidentiality</th>
                <th>Status</th>
                <th>Created (UTC)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var d in docs)
            {
                <tr>
                    <td>@(string.IsNullOrWhiteSpace(d.Number) ? "-" : d.Number)</td>
                    <td>
                        <a asp-controller="Documents" asp-action="Details" asp-route-id="@d.Id">@d.Title</a>
                        <div class="text-muted small">
                            Department: @d.Department?.Name
                        </div>
                    </td>
                    <td>@(d.Amount.HasValue? d.Amount.Value.ToString("0.00") : "-")</td>
                    <td>@d.Confidentiality</td>
                    <td>@d.Status</td>
                    <td>@d.CreatedAtUtc.ToString("yyyy-MM-dd HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>
}

<div class="mt-3">
    <a class="btn btn-secondary" asp-action="Index">Back</a>
</div>
